<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/itembook"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/trenlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_trenlayout"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/baothoigian"
                    android:layout_width="243dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    android:text="Còn 20 phút" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnOrder"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:srcCompat="@drawable/baseline_fastfood_24" />

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_button_bg"
                android:contentDescription="Chỉnh sửa đặt bàn"
                android:src="@drawable/baseline_edit_24"

                android:onClick="onEditClicked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/trailayout"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_trailayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tenbook"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Võ Xuân Ngọc"
                        android:textColor="@color/cam"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paxbook"
                        android:layout_width="wrap_content"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="4 Pax"
                        android:textColor="@color/cam"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/gioden"
                        android:layout_width="wrap_content"
                        android:layout_height="82dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="19:00"
                        android:textColor="@color/cam"
                        android:textSize="40dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phailayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_phailayout"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/statusbook"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:popupBackground="@color/xanh"
                android:layout_height="43dp" />

                <TextView
                    android:id="@+id/banbook"
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/table_bg"
                    android:gravity="center"
                    android:text="A - Bàn 1"
                    android:textColor="@color/cam"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>