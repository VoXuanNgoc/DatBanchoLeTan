<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/cam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminAddRoomActivity">

    <!-- Nhập tên Khu -->

    <!-- Chọn số bàn (Spinner) -->

    <!-- Nhập số ghế -->

    <!-- Nút thêm bàn -->

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="258dp"
        android:layout_height="561dp"
        android:layout_marginBottom="292dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addtable" />

    <EditText
        android:id="@+id/addKhu"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="312dp"
        android:hint="Nhập tên khu"
        android:inputType="text"
        android:backgroundTint="@color/xanh"
        android:textColorHint="@color/xanh"
        android:textColor="@color/xanh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/soban"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/xanh"
        android:textColorHint="@color/xanh"
        android:textColor="@color/xanh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addKhu" />

    <EditText
        android:id="@+id/soGhe"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:hint="Số ghế có thể ngồi"
        android:inputType="number"
        android:backgroundTint="@color/xanh"
        android:textColorHint="@color/xanh"
        android:textColor="@color/xanh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soban" />

    <Button
        android:id="@+id/themban"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Thêm bàn"
        android:background="@drawable/whietbutton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soGhe" />

</androidx.constraintlayout.widget.ConstraintLayout>
