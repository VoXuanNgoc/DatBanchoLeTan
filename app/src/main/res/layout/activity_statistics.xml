<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF">

    <!-- ImageView với căn giữa và margin dưới -->
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="149dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/check" />

    <!-- EditText với style đẹp hơn -->
    <EditText
        android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Chọn ngày (dd/MM/yyyy)"
        android:focusable="false"
        android:clickable="true"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#333"
        android:textColorHint="#999" />

    <!-- Button với style đẹp hơn -->
    <Button
        android:id="@+id/btnLoad"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:text="Load"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:background="@drawable/button_background" />

    <!-- Các TextView với style đồng nhất -->
    <TextView
        android:id="@+id/tvTotalBookings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Tổng số bàn đặt: "
        android:textColor="#333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTotalPax"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Tổng số pax: "
        android:textColor="#333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCancelledBookings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Tổng số bàn hủy: "
        android:textColor="#333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCancelledPax"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Tổng số pax hủy: "
        android:textColor="#333"
        android:textSize="20sp" />
</LinearLayout>
