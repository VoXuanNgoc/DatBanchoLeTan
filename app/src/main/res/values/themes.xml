<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DatBan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/xanh</item>
        <item name="colorPrimaryVariant">@color/xanh</item>
        <item name="android:statusBarColor">@color/xanh</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DatBan" parent="Base.Theme.DatBan" />
    
    <style name="App.Custum.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#FFFFFF</item>
    </style>
    <style name="FilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cam</item>
        <item name="android:backgroundTint">@color/xanh</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/xanh</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AdminMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cam</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>